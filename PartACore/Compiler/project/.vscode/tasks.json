{
	"tasks": [
		{
			"type": "shell",
			"label": "build",
			"command": "make",
			"options": {
				"cwd": "${fileDirname}"
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"revealProblems": "onProblem",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": {
				"fileLocation": ["relative", "${fileDirname}"],
				"base": "$ocamlc"
			}
		}
	],
	"version": "2.0.0"
}