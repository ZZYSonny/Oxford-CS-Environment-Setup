{
	"tasks": [
		{
			"type": "shell",
			"label": "Build",
			"command": "arm-none-eabi-gcc",
			"args": [
				"-mcpu=cortex-m0",
				"-mthumb",
				"-Wall",
				"-nostdlib",
				"-lgcc",
				"-T",
				"NRF51822.ld",
				"-g",
				"startup.c",
				"${relativeFile}",
				"-o",
				"output.elf"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"revealProblems": "onProblem",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": {
				//"applyTo": "openDocuments",
				"fileLocation": ["relative", "${fileDirname}"],
				"source": "make",
				"base": "$gcc"
			}
		}
	],
	"version": "2.0.0"
}